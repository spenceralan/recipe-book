  <div class="row">
    <div class="col-md-6">
      <h2>Add an tag:</h2>
      <form action="/tags" method="post">
      <label for="tag-name">Tag Name:</label>
      <input type="text" name="tag-name" class="form-control">
      <br>
      <button type="submit" class="btn-lg btn-success outline">Add Tag</button>
      <a href="/" class="btn-lg btn-primary outline">home</a>
    </form>
    </div>
    <div class="col-md-6">
      <h2>Tags:</h2>
      <% @tags.each do |tag| %>
        <h4><%= tag.name%></h4>
      <% end %>
    </div>
  </div>
