<div class="col-md-4">
  <h1 class="section-title">Recipes</h1>
  <br>
  <a href="/recipes/add" class="title-button btn-lg btn-primary outline">Add Recipe</a>
  <hr>
  <% @recipes.each do |recipe| %>
  <h3><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
  <% end %>
</div>
<div class="col-md-4">
  <h1 class="section-title">Ingredients</h1>
  <br>
  <a href="/ingredients/add" class="title-button btn-lg btn-primary outline">Add Ingredient</a>
  <hr>
  <% @ingredients.each do |ingredient| %>
  <h3><a href="/ingredients/<%= ingredient.id %>"><%= ingredient.name %></a></h3>
  <% end %>
</div>
<div class="col-md-4">
  <h1 class="section-title">Tags</h1>
  <br>
  <a href="/tags/add" class="title-button btn-lg btn-primary outline">Add Tags</a>
  <hr>
  <% @tags.each do |tag| %>
  <h3><a href="/tags/<%= tag.id %>"><%= tag.name %></a></h3>
  <% end %>
</div>
